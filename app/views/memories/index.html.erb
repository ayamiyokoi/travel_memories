<div class="container">
  <div class="row">
    <div>
      <h1>Memories</h1>
      <table>
        <thead>
          <tr>
            <th>title</th>
            <th>content</th>
            <th>image</th>
          </tr>
        </thead>
        <tbody>
          <% @memories.each do |memory| %>
          <tr>
            <td><%= link_to memory.title, memory_path(memory.id) %></td>
            <td><%= memory.body %></td>
            <td><%= attachment_image_tag memory, :image, size:'40x40', format: 'jpeg' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>